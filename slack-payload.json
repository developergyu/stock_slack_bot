- name: Send message to Slack
  uses: slackapi/slack-github-action@v1.25.0
  with:
    payload: |
      {
        "channel": "#stock_daily",
        "text": "📄 새로운 PDF 보고서가 생성되었습니다.",
        "attachments": [
          {
            "text": "⬇️ [여기서 다운로드](https://github.com/developergyu/stock_slack_bot/actions/runs/${{ github.run_id }})",
            "color": "#36a64f"
          }
        ]
      }
  env:
    SLACK_BOT_TOKEN: ${{ secrets.SLACK_BOT_TOKEN }}
